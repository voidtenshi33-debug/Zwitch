{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the Zwitch application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user. This is the Firebase Authentication UID."
        },
        "displayName": {
          "type": [
            "string",
            "null"
          ],
          "description": "The user's full name."
        },
        "photoURL": {
          "type": [
            "string",
            "null"
          ],
          "description": "URL of the user's profile picture. Can be null if not set.",
          "format": "uri"
        },
        "email": {
          "type": [
            "string",
            "null"
          ],
          "description": "The user's email address.",
          "format": "email"
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time the user account was created.",
          "format": "date-time"
        },
        "avgRating": {
          "type": "number",
          "description": "The average star rating of the user based on feedback from other users."
        },
        "ratingsCount": {
            "type": "number",
            "description": "The total number of ratings a user has received."
        },
        "successfulExchanges": {
            "type": "number",
            "description": "The total number of successful exchanges (sales or donations)."
        },
        "idVerified": {
            "type": "boolean",
            "description": "Whether the user has completed identity verification."
        },
        "joinDate": {
          "type": "string",
          "description": "The date the user joined the platform."
        },
        "itemsRecycled": {
          "type": "number",
          "description": "The total number of items the user has recycled through the platform."
        },
        "lastKnownLocality": {
          "type": "string",
          "description": "The last known locality of the user."
        },
        "wishlist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of item IDs that the user has added to their wishlist."
        }
      },
      "required": [
        "id",
        "createdAt",
        "idVerified",
        "successfulExchanges",
        "ratingsCount"
      ]
    },
    "Item": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Item",
      "type": "object",
      "description": "Represents an item listed for sale, donation, or spare parts.",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "listingType": {
          "type": "string",
          "enum": [
            "Sell",
            "Donate",
            "Spare Parts"
          ]
        },
        "price": {
          "type": [
            "number",
            "null"
          ]
        },
        "imageUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "locality": {
          "type": "string"
        },
        "ownerId": {
          "type": "string"
        },
        "ownerName": {
          "type": "string"
        },
        "ownerAvatarUrl": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "ownerRating": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "Available",
            "Sold",
            "Recycled",
            "Paid - Awaiting Handover"
          ]
        },
        "isFeatured": {
          "type": "boolean"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "description",
        "category",
        "condition",
        "listingType",
        "imageUrls",
        "locality",
        "ownerId",
        "ownerName",
        "ownerRating",
        "status",
        "createdAt"
      ]
    },
    "Order": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Order",
      "type": "object",
      "description": "Represents a transaction when a user clicks 'Buy Now' on an item from a trusted seller.",
      "properties": {
          "id": { "type": "string", "description": "The unique ID for the order." },
          "itemId": { "type": "string", "description": "The ID of the item being purchased." },
          "buyerId": { "type": "string", "description": "The UID of the user who is buying the item." },
          "sellerId": { "type": "string", "description": "The UID of the trusted seller." },
          "price": { "type": "number", "description": "The final price of the item at the time of purchase." },
          "status": {
              "type": "string",
              "enum": [
                  "Paid - Awaiting Handover",
                  "Completed - Awaiting Rating",
                  "Cancelled",
                  "Completed"
              ],
              "description": "The current status of the order transaction."
          },
          "paymentGatewayId": { "type": "string", "description": "The transaction ID from the payment gateway (e.g., Razorpay)." },
          "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp when the order was created." },
          "completedAt": { "type": "string", "format": "date-time", "description": "Timestamp when the buyer confirmed receipt." }
      },
      "required": [
          "id",
          "itemId",
          "buyerId",
          "sellerId",
          "price",
          "status",
          "paymentGatewayId",
          "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles. The 'userId' is the Firebase Auth UID, enabling path-based ownership.",
          "params": [
            {
              "name": "userId",
              "description": "The Firebase Authentication UID of the user."
            }
          ]
        }
      },
      {
        "path": "/items/{itemId}",
        "definition": {
          "entityName": "Item",
          "schema": {
            "$ref": "#/backend/entities/Item"
          },
          "description": "Stores all item listings.",
          "params": [
            {
              "name": "itemId",
              "description": "The unique identifier for the item."
            }
          ]
        }
      },
      {
          "path": "/orders/{orderId}",
          "definition": {
              "entityName": "Order",
              "schema": { "$ref": "#/backend/entities/Order" },
              "description": "Tracks 'Buy Now' transactions, including payment status and handover confirmation.",
              "params": [
                  {
                      "name": "orderId",
                      "description": "The unique identifier for the order."
                  }
              ]
          }
      }
    ]
  }
}
