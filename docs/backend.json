{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the Zwitch application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user. This is the Firebase Authentication UID."
        },
        "displayName": {
          "type": [
            "string",
            "null"
          ],
          "description": "The user's full name."
        },
        "photoURL": {
          "type": [
            "string",
            "null"
          ],
          "description": "URL of the user's profile picture. Can be null if not set.",
          "format": "uri"
        },
        "email": {
          "type": [
            "string",
            "null"
          ],
          "description": "The user's email address.",
          "format": "email"
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time the user account was created.",
          "format": "date-time"
        },
        "avgRating": {
          "type": "number",
          "description": "The average star rating of the user based on feedback from other users."
        },
        "joinDate": {
          "type": "string",
          "description": "The date the user joined the platform."
        },
        "itemsRecycled": {
          "type": "number",
          "description": "The total number of items the user has recycled through the platform."
        },
        "lastKnownLocality": {
          "type": "string",
          "description": "The last known locality of the user."
        }
      },
      "required": [
        "id",
        "createdAt"
      ]
    },
    "Item": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Item",
      "type": "object",
      "description": "Represents an item listed for sale, donation, or spare parts.",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "listingType": {
          "type": "string",
          "enum": [
            "Sell",
            "Donate",
            "Spare Parts"
          ]
        },
        "price": {
          "type": [
            "number",
            "null"
          ]
        },
        "imageUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "locality": {
          "type": "string"
        },
        "ownerId": {
          "type": "string"
        },
        "ownerName": {
          "type": "string"
        },
        "ownerAvatarUrl": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "ownerRating": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "Available",
            "Sold",
            "Recycled"
          ]
        },
        "isFeatured": {
          "type": "boolean"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "description",
        "category",
        "condition",
        "listingType",
        "imageUrls",
        "locality",
        "ownerId",
        "ownerName",
        "ownerRating",
        "status",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles. The 'userId' is the Firebase Auth UID, enabling path-based ownership.",
          "params": [
            {
              "name": "userId",
              "description": "The Firebase Authentication UID of the user."
            }
          ]
        }
      },
      {
        "path": "/items/{itemId}",
        "definition": {
          "entityName": "Item",
          "schema": {
            "$ref": "#/backend/entities/Item"
          },
          "description": "Stores all item listings.",
          "params": [
            {
              "name": "itemId",
              "description": "The unique identifier for the item."
            }
          ]
        }
      }
    ]
  }
}